<% include ./partial/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form hidden action="/fileupload" id="uploadform"  method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
        <div class="relative">
            <span class="w-10 h-10 absolute bottom-0 right-0 bg-zinc-200 flex items-center justify-center rounded-full">
                <i id="uploadicon" class="ri-pencil-fill text-zinc-800"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">  
                <img class="w-full h-full object-cover" src="/images/uploads/<%=user.profileImage%>" alt="">         
            </div>
        </div>
        <h1 class="text-3xl font-semibold"><%= user.name%></h1>
        <h3 class="text-md">@<%= user.username%></h3>
        <div class="flex gap-5 mb-2">
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full mt-2">Edit</a>  
        
        </div>
        
        <a href="/add" class="px-10 mt-2 py-2 bg-red-600 rounded-full">Add New Post</a>
    </div>
    
    <div class="cards flex flex-wrap gap-10 mt-10 px-10">
    <div class="card">
        <div class="w-52 h-40 bg-zinc-200 rounded-lg  overflow-hidden">
            <img class="w-full h-full object-cover" 
              src="/images/uploads/<%= user?.posts[0]?.image%>" alt=""></div>
    <a href="/show/post" class="text-xl font-semibold mt-5">All Uploaded</a>
    <h5 class=" text-sm opacity-60"><%= user.posts.length%> Pins</h5>
</div>

</div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener("click",function(){
        document.querySelector("#uploadform input").click()
    })
    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })
</script>
<% include ./partial/footer.ejs %>